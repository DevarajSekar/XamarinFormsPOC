<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiSelect.MainPage">

    <StackLayout VerticalOptions="FillAndExpand">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Multi Select Sample! Using MediaGallery plugin" HorizontalTextAlignment="Center" TextColor="GhostWhite" FontSize="26"/>
        </Frame>
        <Button Text="Pick Image from gallery" HorizontalOptions="CenterAndExpand" Clicked="Button_Clicked"/>

        <ScrollView VerticalOptions="FillAndExpand">
            <Grid VerticalOptions="FillAndExpand" Margin="5" x:Name="parentGrid" BackgroundColor="LightGray">
            </Grid>
        </ScrollView>

    </StackLayout>
</ContentPage>
