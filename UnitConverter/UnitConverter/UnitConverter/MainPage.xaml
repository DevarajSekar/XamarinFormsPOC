<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitConverter.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Unit Converter Sample!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="entry" Placeholder="Enter Value" Keyboard="Numeric" Margin="20"/>
        <Label Text="Converter Result" x:Name="label" FontAttributes="Bold" FontSize="16" Padding="30,0,30,0"/>
        <Button Text="Convert Celsius To Fahrenheit" Margin="0,20,0,0" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand"/>
        <Button Text="Convert Kilometers To Miles" Margin="0,20,0,0" Clicked="Button_Clicked_1" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>