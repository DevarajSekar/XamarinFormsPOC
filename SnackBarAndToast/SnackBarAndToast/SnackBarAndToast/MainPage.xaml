<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnackBarAndToast.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="SnackBar And Toast Sample!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button Text="Show me SnackBar at Bottom!" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand"/>
        <Button Text="Show me SnackBar at Top!" Clicked="Button_Clicked_1" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
