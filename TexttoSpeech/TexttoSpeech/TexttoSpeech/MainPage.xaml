<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TexttoSpeech.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Text to Speech!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Frame Margin="20" HeightRequest="200" CornerRadius="10">
            <Entry x:Name="entry" Text="Hi Hello, Welcome to text to speech sample!" VerticalOptions="Center" Placeholder="Enter text to convert to speech!!"/>
        </Frame>

        <Button VerticalOptions="Center" HorizontalOptions="Center"
                Text="Click to speak" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
